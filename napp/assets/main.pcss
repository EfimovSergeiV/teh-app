::-webkit-scrollbar {
  width: 6px;
  height: 6px;
  background-color: #202020;
}

::-webkit-scrollbar-thumb {
  background-color: #f8dc08;
  border-radius: 6px;
  box-shadow: inset 1px 1px 10px #f8dc08;
}

::-webkit-scrollbar-thumb:hover {
  background-color: #f8dc08;
}
